#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct groups {
    int n;
    char *a;
    int b;
    char c;
    char *d;
};
int list(int start, int max)
{

    struct groups g[5];
   // struct groups g[1];
        g[1].n = 1;
        g[1].a = "hong";
        g[1].b = 30;
        g[1].c = 'M';
        g[1].d = "soccer";
//    struct groups g2;
        g[2].n = 2;
        g[2].a = "kim";
        g[2].b = 25; 
        g[2].c = 'M';
        g[2].d =  "music";
  //  struct groups g3;
        g[3].n = 3;
        g[3].a = "park";
        g[3].b = 20;
        g[3].c = 'F';
        g[3].d =  "movie";
    for (int i = start; i <= max; i++) {
        printf("순번 이름 나이 성별 취미순으로 입력하세요\n");
        for (int j = 1; j < i; j++) {
            g[i].a = (char *)malloc(100 * sizeof(char)); //동적 메모리 할당
            g[i].d = (char *)malloc(100 * sizeof(char));
            printf("%d %s %d %c %s\n", g[j].n, g[j].a, g[j].b, g[j].c, g[j].d);
        }
            printf("순번 입력");
            scanf("%d",&g[i].n);
            if (g[i].n == (int) g[i].n){
            } else if(g[i].n != (int) g[i].n) {
                printf("정수를 입력하세요");
                i = i - 1;
                continue;
            }
            printf("이름 입력");
            scanf("%s",g[i].a);
            printf("나이 입력");
            getchar();
            scanf("%d",&g[i].b);
            if (g[i].b >= 100 || g[i].b <= 0) {
                printf("올바른 나이값을 넣으세요\n");
                i = i - 1;
                continue;
            } else if (g[i].b != (int) g[i].b) {
                printf("정수를 입력하세요");
                i = i - 1;
                continue;
            }
            getchar();
            printf("성별 입력");
            scanf("%c",&g[i].c);
            if (g[i].c == 'F') {
                
            } else if (g[i].c =='M') {
                
            } else if (g[i].c != (char) g[i].c) {
                printf("기호를 입력하지 마세요\n");  
                i = i - 1;
                continue;
            } else {
                printf("성별을 M/F중에 입력하세요\n");
                i = i - 1;
                continue;
            }
            getchar();
            printf("취미 입력없는 경우 N입력");
            scanf("%s",g[i].d);
            if (g[i].d == "") {
                printf("다시 입력해주세요");
            } else if ( g[i].d == 'N') {
                g[i].d = " ";
            }
            printf("\n"); 
        
    }
    for (int i = 0; i < max; i++) {
        free(g[i].a); // 메모리 할당 해제
        free(g[i].d);
    }
    return 0;
}   
int main()
{
    list(4, 100); //기존의 입력값을 출력하기 위해 4번째 순번부터 시작작
    return 0;
}
