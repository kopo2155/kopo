#include <stdio.h>

int main()
{
    struct groups {
        int *n;
        char *a;
        int *b;
        char *c;
    };
    union student{
        char hobby;
        char etc;
    };
    struct groups g[5];
   // struct groups g[1];
        g[1].n = 1;
        g[1].a = "hong";
        g[1].b = 30;
        g[1].c = 'M';
    union student gg[1];
        strcpy(gg[1].etc, "soccer");
        strcpy(gg[1].etc, "nothing");
//    struct groups g2;
        g[2].n = 2;
        g[2].a = "kim";
        g[2].b = 25; 
        g[2].c = 'M';
    //union student gg[2];
        strcpy(gg[2].etc, "soccer");
        strcpy(gg[2].etc, "nothing");
  //  struct groups g3;
        g[3].n = 3;
        g[3].a = "park";
        g[3].b = 20;
        g[3].c = 'F';
    //union student gg[3];
        strcpy(gg[3].etc,"movie");
        strcpy(gg[3].etc, "nothing");
 
    for (int i = 4; i <= 100; i++) {
        printf("순번 이름 나이 성별 취미순으로 입력하세요\n");
        for (int j = 1; j < i; j++) {
            g[i].a = (char *)malloc(100 * sizeof(char)); //동적 메모리 할당
            printf("%d %s %d %c %s %s\n", g[j].n, g[j].a, g[j].b, g[j].c, gg[j].hobby, gg[j].etc);
        }
        scanf("%d",&g[i].n);
        scanf("%s",g[i].a);
        scanf("%d",&g[i].b); // scanf사용시 엔터사용으로 인해 \n값이 다음에 입력되는 것을 방지
        getchar();
        scanf("%c",&g[i].c);//%c는 %s나 %d와 달리 공백을 입력받기 때문에 getchar()를 한번만 사용
        scanf("%s",gg[i].hobby);
        scanf("%s",gg[i].etc);
        printf("\n");
    }
    for (int i = 0; i < 5; i++) {
        free(g[i].a); // 메모리 할당 해제
        
    }
   
    return 0;
}
